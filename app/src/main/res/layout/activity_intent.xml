<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/header">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Intent"
            android:layout_marginStart="110dp"
            android:gravity="center_vertical"
            android:fontFamily="sans-serif-medium"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/intent_tv1"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv1"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="5sp"
                android:text="@string/intent_tv2"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="1000dp"
                android:layout_height="400dp"
                android:src="@drawable/intent_table"
                android:layout_below="@id/tv2"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv2"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="5sp"
                android:text="@string/intent_tv3"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv3"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="5sp"
                android:text="@string/intent_tv4"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/tv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv4"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="5sp"
                android:text="@string/intent_tv5"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="250dp"
                android:layout_marginStart="90dp"
                android:layout_height="100dp"
                android:src="@drawable/ex_intent"
                android:layout_below="@id/tv5"/>

            <TextView
                android:id="@+id/tv6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv3"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="5sp"
                android:text="@string/intent_tv6"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="250dp"
                android:layout_marginStart="90dp"
                android:layout_height="80dp"
                android:src="@drawable/im_intent"
                android:layout_below="@id/tv6"/>

            <TextView
                android:id="@+id/tv7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/intent_tv7"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/iv4"/>

            <TextView
                android:id="@+id/tv8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv7"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="5sp"
                android:text="@string/intent_tv8"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/intent_tv9"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/tv8"/>

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="500dp"
                android:layout_marginTop="10dp"
                android:layout_height="150dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/syntex_intent"
                android:layout_below="@id/tv9"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>